<h1>Fruit Bowl</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url, :width => 100) if idea.picture.present?%> 
        <td><%= link_to 'Display', idea, :class => "btn btn-default" %></td>
        <td><%= link_to 'Amend', edit_idea_path(idea), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Delete', idea, method: :delete, data: { confirm: 'Do you really want to do this?  Your fruit bowl will be much less tasty without me!' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Fruit', new_idea_path %>
